<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="customer" class="model.Customer"/>

    <bean name="customerRepository" class="repository.HybernetCostomerRepositoryImpl">
        <constructor-arg index="0" ref="customer"/>
    </bean>

    <bean name="customerService" class="service.CustomerServiceImpl">
        <constructor-arg index="0" ref="customerRepository"/>
    </bean>
</beans>
